<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.opentravelsoft.entity.Group" table="TBL_GROUP">
    <cache usage="nonstrict-read-write"/>
    <id name="groupId" type="long">
      <column name="GROUP_ID" />
      <generator class="native" />
    </id>
    <property name="name" type="string">
      <column name="DPT_CN" length="20" not-null="true" />
    </property>
    <property name="fullName" type="string">
      <column name="FULL_NAME" length="60" />
    </property>
    <many-to-one name="parent" column="PARENT_ID" class="com.opentravelsoft.entity.Group" />
    <property name="contact" type="string">
      <column name="LINKMAN" length="20" />
    </property>
    <property name="phone" type="string">
      <column name="TEL" length="40" />
    </property>
    <property name="fax" type="string">
      <column name="FAX" length="40" />
    </property>

    <set name="children" inverse="true" lazy="false" table="TBL_GROUP" fetch="select">
      <key>
        <column name="PARENT_ID" />
      </key>
      <one-to-many class="com.opentravelsoft.entity.Group" />
    </set>
    <set name="employees" inverse="true" lazy="false" table="TBL_EMPLOYEE" fetch="select">
      <key>
        <column name="GROUP_ID" not-null="true" />
      </key>
      <one-to-many class="com.opentravelsoft.entity.Employee" />
    </set>
  </class>
</hibernate-mapping>
